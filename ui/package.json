{
  "name": "wiki-ui",
  "version": "1.0.0",
  "description": "UI for Wiki",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon tools/dev-server.js",
    "build": "node tools/prod.js",
    "test": "node --test",
    "lint": "eslint ./src/**/*.js ./tools/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "github.com/reederc42/wiki"
  },
  "author": "Chris Reeder <reederc42@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@testing-library/dom": "^9.3.3",
    "ace-builds": "^1.31.1",
    "core-js": "^3.33.2",
    "cypress": "^13.5.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jsdom": "^22.1.0",
    "marked": "^9.1.5",
    "reefjs": "^13.0.2"
  },
  "devDependencies": {
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "yargs": "^17.7.2"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "semi": true,
          "trailingComma": "all",
          "tabWidth": 4,
          "endOfLine": "lf"
        }
      ]
    },
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ]
  }
}
